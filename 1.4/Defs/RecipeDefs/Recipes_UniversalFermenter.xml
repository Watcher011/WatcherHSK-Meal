<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<RecipeDef Name="Make_DriedMushroomsBase" Abstract="True">
		<fixedIngredientFilter>
			<categories>
				<li>FungusPlantRaw</li>
			</categories>
		</fixedIngredientFilter>
		<recipeUsers>
			<li>DryingRack</li>
		</recipeUsers>

		<!-- RecipeDef_UF fields -->
		<temperatureSafe>
			<min>5</min>
			<max>80</max>
		</temperatureSafe>
		<temperatureIdeal>
			<min>18</min>
			<max>50</max>
		</temperatureIdeal>
		<processDays>2</processDays>
		<speedBelowSafe>0.05</speedBelowSafe>
		<speedAboveSafe>0.8</speedAboveSafe>
		<sunFactor>
			<min>0.75</min>
			<max>1.2</max>
		</sunFactor>
		<rainFactor>
			<min>1</min>
			<max>0</max>
		</rainFactor>
		<snowFactor>
			<min>1</min>
			<max>0</max>
		</snowFactor>
		<windFactor>
			<min>1</min>
			<max>1.2</max>
		</windFactor>
	</RecipeDef>
	<RecipeDef ParentName="Make_DriedMushroomsBase" Class="UniversalFermenterSK.RecipeDef_UF">
		<defName>Make_DriedMushrooms</defName>
		<label>высушить грибы</label>
		<description>Высушить свежие грибы. Процесс занимает 2 дня.</description>
		<ingredients>
		<li>
				<filter>
					<categories>
						<li>FungusPlantRaw</li>
					</categories>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		<products>
			<DruFungus>5</DruFungus>
		</products>
	</RecipeDef>

	<RecipeDef ParentName="Make_DriedMushroomsBase" Class="UniversalFermenterSK.RecipeDef_UF">
		<defName>Make_DriedMushrooms_x5</defName>
		<label>высушить грибы x5</label>
		<description>Высушить свежие грибы. Процесс занимает 2 дня.</description>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>FungusPlantRaw</li>
					</categories>
				</filter>
				<count>25</count>
			</li>
		</ingredients>
		<products>
			<DruFungus>25</DruFungus>
		</products>

		<!-- RecipeDef_UF fields -->
		<slotsRequired>5</slotsRequired>
	</RecipeDef>



